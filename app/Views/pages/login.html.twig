{% extends "base.html.twig" %}

{% block content %}

	{{ form_open(base_url('login'))}}
	<div class="login-form">
		<div class="form-group">
			<label for="login-email-username">Email address</label>
			<input type="text" class="form-control" id="login-email-username" aria-describedby="emailHelp" placeholder="Enter Email/Username">
		</div>
		<div class="form-group">
			<label for="login-password">Password</label>
			<input type="password" class="form-control" id="login-password" placeholder="Password">
		</div>
        <div class="login-no-account"> 
        <p>Don't have an account ? Register &nbsp; </p>
        <a href="{{base_url('register')}}" class="login-here"><p> here !</p></a>
        </div>
		<button type="submit" class="btn-login">Log In</button>
	</div>
	{{ form_close() }}

{% endblock %}
